# Edit with vim
export EDITOR=vim

# echo Activating extended globs
# http://mywiki.wooledge.org/glob
shopt -s extglob

# Locale
export LC_ALL=en_US.utf8

# Normalize volume
alias mplayer='mplayer -af-add volnorm'

# http://wiki.netbsd.org/unicode/
export LANG="en_US.UTF-8" export LC_CTYPE="en_US.UTF-8" export LC_ALL=""
export LESSCHARSET="utf-8"
